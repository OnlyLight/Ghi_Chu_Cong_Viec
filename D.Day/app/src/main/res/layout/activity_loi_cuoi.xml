<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loi_cuoi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quangduytangcocv2017.dday.LoiCuoi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#212121"
                android:id="@+id/txtvLoiCuoi0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF1744"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="30dp"
                android:id="@+id/txtvLoiCuoi1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14dp"
                android:textColor="#7B1FA2"
                android:id="@+id/txtvLoiCuoi2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14dp"
                android:textColor="#7B1FA2"
                android:id="@+id/txtvLoiCuoi3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14dp"
                android:textColor="#7B1FA2"
                android:id="@+id/txtvLoiCuoi4"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
